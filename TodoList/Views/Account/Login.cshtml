    }

    a {
        color: #007bff;
        text-decoration: none;
    }

        a:hover {
            text-decoration: wavy;
        }

    .col-md-10 {
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .input-group-append {
        display: flex;
        margin-right: 10px;
        align-items: center;
    }

        .input-group-append .btn {
            margin-left: 170px;
        }
    .text-left {
