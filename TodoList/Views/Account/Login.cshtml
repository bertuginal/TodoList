        margin: 0;
    }

    h2 {
        color: #333;
        font-weight: 600;
        text-align: center;
        margin-bottom: 30px;
    }

    h4 {
        color: #666;
        font-weight: 400;
        text-align: center;
    }

    h6 {
        color: #888;
        font-weight: 300;
        text-align: center;
    }

    .form-horizontal {
        background-color: #fff;
        padding: 40px;
        border-radius: 10px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        max-width: 400px;
        width: 100%;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .control-label {
        font-weight: 500;
        color: #333;
        display: block;
        margin-bottom: 10px;
        text-align: left;
    }

    .form-control {
        border-radius: 5px;
        padding: 10px;
        border: 1px solid #ccc;
        width: 100%;
        font-size: 16px;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 8px rgba(0, 123, 255, 0.2);
        }

    .btn-dark {
        background-color: #333;
        color: #fff;
        padding: 10px 115px;
